.blank {
	height: 80rpx;
	background: none;
	margin-bottom: 5px;
}

.sb-container {
	position: fixed;
	top: 0;
	display: flex;
	flex-flow: row nowrap;
	width: 100%;
	height: 60rpx;
	padding: 10rpx 0;
	background-color: white;
	z-index: 999;
}
.sb-container view { display: flex; }

.sb-input-container {
	flex: 4;
	background-color: #eee;
	align-items: center;
	margin-left: 15rpx;
	padding: 0 10rpx;
	border-radius: 5px;
}
.sb-input {
	height: 100%;
	min-width: 94%;
	border-radius: 5px;
	text-align: left;
}

.sb-button-container {
	flex: 1;
}
.sb-button {
	display: flex;
	justify-content: center;
	align-items: center;
	width: 100%;
	text-align: center;
	color: orangered;
}

.sb-button, .sb-input { font-size: 35rpx; }