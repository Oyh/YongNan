/* pages/seller/info/modify.wxss */
@import "../../lib/style/iconfont.wxss";

page {
	position: relative;
	font-size: 20px;
}

.seller-info-container {
	height: calc(100vh - 50px);
	overflow: scroll;
}

.upload-button {
	height: 50px;
	line-height: 50px;
	text-align: center;
	background-color: black;
	color: white;
}

/* ---------------- */
.line {
	display: flex;
	flex-flow: row nowrap;
	margin: 10px 10px 0;
	align-items: center;
	line-height: 30px;
}

.line input {
	flex: 1;
	height: 30px;
	margin-left: 5px;
	padding: 0 5px;
	border: 1px solid black;
}

.double.line {
	flex-flow: row wrap;
}
.double.line textarea {
	min-width: calc(100% - 10px);
	height: 90px;
	margin: 0;
	padding: 0 5px;
	overflow: hidden;
	border: 1px solid black;
}

.seller-image {
	margin: 10px;
}
.image-wrapper {
	width: 200px;
	height: 200px;
	margin: auto;
	line-height: 200px;
	text-align: center;
	background-color: #ddd;
}
.image-wrapper .has-image,
.image-wrapper .has-image image {
	position: relative;
	display: block;
	width: 100%;
	height: 100%;
}
.delete-button {
	position: absolute;
	top: -10px;
	right: -10px;
	height: 30px;
	width: 30px;
	border-radius: 50%;
	background-color: #ddd;
}
.delete-button::before {
	position: absolute;
	content: '\2716';
	color: gray;
	top: 0;
	left: 0;
	height: 30px;
	width: 30px;
	line-height: 30px;
}