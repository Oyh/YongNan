/* pages/seller/goods/addOrModify.wxss */
page {
	font-size: 18px;
}

.input-container {
	height: calc(100vh - 50px - 10px);
	overflow: scroll;
	padding: 10px 0 0;
}

.inputBox,
.image-container {
	display: flex;
	flex-direction: row;
	margin: 0 10px 15px;
	align-items: center;
}
.inputBox .inputLabel,
.image-container .inputLabel {
	padding-right: 10px;
	height: 30px;
	line-height: 30px;
}
.inputBox input,
.inputBox textarea {
	flex: 1;
	border: 1px solid gray;
	padding: 0 5px;
	height: 30px;
	line-height: 30px;
}

.inputBox.description,
.image-container {
	align-items: flex-start;
}
.inputBox textarea {
	height: 100px;
	line-height: 30px;
	overflow: hidden;
}

.image-wrapper {
	width: 50vw;
	height: 50vw;
	line-height: 50vw;
	text-align: center;
	margin: 10px 0 0 20px;
	color: #999;
	background-color: #ddd;
}
.image-wrapper .has-image,
.image-wrapper .has-image image {
	position: relative;
	display: block;
	width: 100%;
	height: 100%;
}
.delete-button {
	position: absolute;
	top: -10px;
	right: -10px;
	height: 30px;
	width: 30px;
	border-radius: 50%;
	background-color: #ddd;
}
.delete-button::before {
	position: absolute;
	content: '\2716';
	color: gray;
	top: 0;
	left: 0;
	height: 30px;
	width: 30px;
	line-height: 30px;
}

.upload-button {
	height: 50px;
	line-height: 50px;
	text-align: center;
	background-color: black;
	color: white;
}