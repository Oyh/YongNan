/* pages/seller/goods/management.wxss */
page {
	display: flex;
	flex-direction: column;
	font-size: 18px;
	height: 100vh;
}

.goods-wrapper {
	flex: 1;
	overflow: scroll;
	padding-bottom: 10px;
}

.add-button {
	height: 50px;
	line-height: 50px;
	text-align: center;
	background-color: black;
	color: white;
	font-size: 20px;
}

/* ---------------- */
.goods-item-container {
	position: relative;
	margin: 10px 10px 0;
}
.goods-item-container movable-area {
	width: calc(100% - 100px);
	height: 100px;
}
.goods-item-container .goods-item {
	display: flex;
	flex-direction: row;
	width: calc(100vw - 20px);
	height: 100%;
	align-items: center;
	background-color: #ddd;
	z-index: 999;
}

.button-wrapper {
	position: absolute;
	right: 0;
	top: 0;
	bottom: 0;
	display: flex;
	flex-direction: column;
	width: 100px;
	justify-content: space-between;
	z-index: 1;
}
.button-wrapper .edit-button,
.button-wrapper .delete-button {
	background-color: red;
	text-align: center;
	height: 49px;
	line-height: 49px;
	margin-left: 2px;
}

/* ---------------- */
.goods-picture {
	width: 90px;
	height: 90px;
	line-height: 90px;
	text-align: center;
	margin: 0 5px;
	background-color: #aaa;
}

.goods-info-container {
	flex: 1;
	width: 0;
	display: flex;
	flex-direction: column;
	height: 90px;
	margin: 0 5px;
	justify-content: space-between;
}

.goods-info-top {
	display: flex;
	height: 50px;
	line-height: 23px;
	font-weight: bold;
	justify-content: space-between;
}
.goods-name {
	width: 60%;
	height: 46px;
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}
.goods-price {
	text-align: right;
}

.goods-brand,
.goods-parts {
	font-size: 17px;
	height: 20px;
	line-height: 20px;
}