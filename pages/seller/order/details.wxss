/* pages/seller/order/details.wxss */
page {
	display: flex;
	flex-direction: column;
	font-size: 18px;
}

/* ---------------- */
.order-status-wrapper {
	margin: 10px;
	height: 30px;
}
.order-status-content {
	position: relative;
	display: inline-block;
	line-height: 30px;
	font-size: 22px;
	font-weight: bold;
}
.order-status-content::after {
	position: absolute;
	right: -20px;
	top: 9px;
	content: "";
	width: 10px;
	height: 10px;
	border-width: 3px;
	border-style: solid solid none none;
	border-color: black;
	transform: rotate(45deg);
}

/* ---------------- */
.order-details-container {
	display: flex;
	flex-direction: column;
	background-color: #ddd;
	margin: 0 10px 10px;
	padding: 10px 10px 5px;
}

.order-title {
	display: flex;
	flex-direction: row;
	align-items: center;
}
.buyer-name {
	flex: 1;
	padding-right: 10px;
	font-size: 20px;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.buyer-tel-icon {
	width: 40px;
	height: 40px;
	line-height: 40px;
	text-align: center;
	background-color: #aaa;
}

.order-item {
	display: flex;
	flex-direction: row;
	margin: 10px 0 0;
	padding: 5px;
	border: 1px solid black;
}
.order-item-picture {
	width: 80px;
	height: 80px;
	line-height: 80px;
	text-align: center;
	background-color: #aaa;
}
.order-item-middle {
	flex: 1;
	padding: 10px 10px 0;
	overflow: hidden;
}
.order-item-name {
	height: 30px;
	line-height: 30px;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.order-item-num {
	height: 30px;
	line-height: 30px;
}
.order-item-price {
	width: 80px;
	height: 30px;
	line-height: 30px;
	text-align: right;
	padding-top: 10px;
}

.order-delivery-cost,
.order-total-price {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	padding: 5px;
}
.order-delivery-cost {
	border-bottom: 2px solid black;
}
.order-total-price {
	padding-bottom: 0;
}

/* ---------------- */
.rider-wrapper {
	display: flex;
	flex-direction: column;
	margin: 0 10px 10px;
	background-color: #ddd;
	height: 90px;
	justify-content: space-between;
	padding: 10px 5px;
}
.rider-title {
	color: #777;
	margin-left: 5px;
}
.rider-name,
.rider-tel {
	margin-left: 20px;
}

/* ---------------- */
.order-details-wrapper {
	display: flex;
	flex-direction: column;
	margin: 0 10px 10px;
	background-color: #ddd;
	height: 90px;
	justify-content: space-between;
	padding: 10px 5px;
}
.order-details-title {
	color: #777;
	margin-left: 5px;
}
.order-details-ID,
.order-details-time {
	margin-left: 20px;
}

/* ---------------- */
.operating-button {
	margin: 0 10px 10px;
	height: 50px;
	line-height: 50px;
	text-align: center;
	font-size: 20px;
	font-weight: bold;
	background-color: red;
}