/* pages/seller/main/main.wxss */
page {
	display: flex;
	flex-direction: column;
	font-size: 18px;
}

/* ---------------- */
.seller-info-container {
	display: flex;
	flex-direction: row;
	padding: 20px 10px;
	align-items: center;
	border-bottom: 1px solid black;
}
.seller-picture {
	width: 70px;
	height: 70px;
	line-height: 70px;
	text-align: center;
	background-color: #aaa;
	border-radius: 50%;
}
.seller-name {
	flex: 1;
	padding: 0 20px 0 10px;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	font-size: 25px;
	font-weight: bold;
}
.seller-grade {
	font-size: 20px;
	font-weight: bold;
}

/* ---------------- */
.seller-business-container {
	display: flex;
	flex-direction: row;
	padding: 20px 10px;
	border-bottom: 1px solid black;
}
.seller-monthly-order,
.seller-monthly-income {
	flex: 1;
	text-align: center;
}
.seller-business-container .num {
	font-size: 28px;
	font-weight: bold;
}

/* ---------------- */
.seller-menu-container {
	display: flex;
	flex-flow: row wrap;
	justify-content: flex-start;
	padding: 20px 0;
}
.seller-menu-container .block {
	display: flex;
	flex-direction: column;
	box-sizing: border-box;
	width: 33.33vw;
	height: 33.33vw;
	/* background-color: #ddd; */
	justify-content: space-around;
	align-items: center;
	margin-bottom: 20px;
}
.seller-menu-container .block-icon {
	width: 23vw;
	height: 23vw;
	line-height: 23vw;
	text-align: center;
	border-radius: 50%;
	background-color: #aaa;
}