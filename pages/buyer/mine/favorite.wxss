/* pages/buyer/mine/favorite.wxss */
page {
	font-size: 18px;
	padding-bottom: 10px;
}

.favorite-item {
	position: relative;
	margin: 10px 10px 0;
	/* z-index: 999; */
}

.favorite-item movable-area {
	width: calc(100% - 100px);
	height: 100px;
}
.favorite-item .seller-container {
	display: flex;
	width: calc(100vw - 20px);
	height: 100%;
	background-color: #ddd;
	z-index: 999;
}

.favorite-item .del-button {
	position: absolute;
	display: flex;
	right: 0;
	top: 0;
	bottom: 0;
	width: 100px;
	justify-content: center;
	align-items: center;
	background-color: red;
	z-index: 1;
}

.seller-picture {
	height: 90px;
	width: 90px;
	margin: 5px;
	background-color: #aaa;
}

.seller-info-wrapper {
	display: flex;
	flex-direction: column;
	flex: 1;
	width: 0;
	margin-left: 10px;
	padding: 0 5px;
}
.seller-info-top {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	flex: 1;
	font-size: 20px;
	font-weight: bold;
}

.seller-brand,
.seller-parts {
	font-size: 14px;
	height: 30px;
	line-height: 30px;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}