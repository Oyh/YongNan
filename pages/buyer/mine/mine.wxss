/* pages/buyer/mine/mine.wxss */
page {
	display: flex;
	flex-direction: column;
	font-size: 20px;
}

/*----------------*/
.buyer-info-container {
	display: flex;
	padding: 25px 0;
	border-bottom: 1px solid #ccc;
	align-items: center;
}
.buyer-picture {
	width: 100px;
	height: 100px;
	line-height: 100px;
	border-radius: 50%;
	text-align: center;
	margin-left: 50rpx;
	background-color: #ccc;
}
.buyer-name {
	margin-left: 30rpx;
	font-size: 25px;
	font-weight: bold;
}

/*----------------*/
.buyer-points-wrapper {
	display: flex;
	flex-direction: column;
	padding: 10px 0;
	align-items: center;
	border-bottom: 1px solid #ccc;
}
.buyer-points-title {
	font-weight: bold;
}
.buyer-points {
	font-size: 40px;
	font-weight: bolder;
}
.buyer-points-grade,
.buyer-points-gap {
	font-size: 15px;
	color: #aaa;
}

/*----------------*/
.buyer-favorite-wrapper,
.service-wrapper {
	padding: 5px 10px;
	border-bottom: 1px solid #ccc;
}