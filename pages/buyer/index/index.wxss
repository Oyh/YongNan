/* pages/buyer/index/index.wxss */
/* ---- 分类 ---- */
.sort-container {
	display: flex;
	flex-flow: row wrap;
	padding: 0 10px;
	font-size: 35rpx;
	text-align: center;
	margin-top: 10px;
}

.sort-selector {
	display: flex;
	width: 100%;
}
.sort-selected { background-color: #aaa; }
.sort-unselected { background-color: #eee; }
.sort-selected,
.sort-unselected{
	width: 50%;
	height: 70rpx;
	line-height: 70rpx;
}

.sort-list {
	display: flex;
	flex-flow: row wrap;
	width: 100%;
	justify-content: space-between;
	margin-top: 15px;
}
.sort-item {
	display: flex;
	width: 22vw;
	height: 22vw;
	margin: 3px;
	border-radius: 50%;
	background-color: #aaa;
	justify-content: center;
	align-items: center;
}

/* ---- 广告 ---- */

.ad-wrapper {
	margin: 10px;
	height: 150px;
	line-height: 150px;
	text-align: center;
	font-size: 50rpx;
	background-color: #eee;
}

/* ---- 热门商家 ---- */
.popular-container {
	margin-top: 10px;
}

.popular-title{
	position: relative;
	font-size: 35rpx;
	text-align: center;
	color: #aaa;
}
.popular-title::before,
.popular-title::after {
	content: "";
	position: absolute;
	top: 50%;
	background-color: #aaa;
	width: 15%;
	height: 1px;
}
.popular-title:before { left: 20%; }
.popular-title:after { right: 20%; }

.seller-container {
	margin-top: 5px;
	display: flex;
	width: 100%;
	height: 30vw;
}
.seller-container view {
	justify-content: center;
	align-items: center;
}
.seller-picture-wrapper {
	display: flex;
	flex: 3;
	background-color: #aaa;
}
.seller-info-wrapper {
	display: flex;
	flex: 7;
	background-color: #bbb;
}