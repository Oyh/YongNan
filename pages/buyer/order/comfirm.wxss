/* pages/buyer/order/comfirm.wxss */
page {
	background-color: #eee;
	padding-bottom: 120rpx;
	font-size: 35rpx;
}

/*----------------*/
.address-wrapper {
	display: flex;
	flex-direction: column;
	margin: 20rpx;
	justify-content: center;
	align-items: flex-start;
}
.address-title {
	color: gray;
}
.address-content {
	padding-right: 50rpx;
	max-width: 660rpx;
	position: relative;
}
.address-content::after {
	position: absolute;
	right: 20rpx;
	top: 33rpx;
	content: "";
	margin-left: 20rpx;
	width: 14rpx;
	height: 14rpx;
	border-top: 5rpx solid black;
	border-right: 5rpx solid black;
	transform: rotate(45deg);
}

.buyer-address {
	height: 80rpx;
	line-height: 80rpx;
	font-size: 40rpx;
	font-weight: bold;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	margin-bottom: -20rpx;
}
.buyer-name, .buyer-tel {
	display: inline-block;
	font-size: 28rpx;
	color: gray;
	margin-right: 30rpx;
}

/*----------------*/
.order-container {
	display: flex;
	flex-direction: column;
	margin: 20rpx;
	background-color: white;
	align-items: center;
}

.order-title {
	display: flex;
	flex-flow: row nowrap;
	width: 90%;
	height: 100rpx;
	align-items: center;
}
.seller-picture {
	flex-grow: 0;
	height: 60rpx;
	width: 60rpx;
	line-height: 60rpx;
	text-align: center;
	font-size: 25rpx;
	background-color: #aaa;
	border-radius: 30rpx;
}
.seller-name {
	width: 75%;
	margin-left: 20rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.order-item {
	display: flex;
	width: 90%;
	margin: 10rpx 0;
	padding: 15rpx;
	background-color: #eee;
	justify-content: space-between;
}
.order-item-picture {
	width: 150rpx;
	height: 150rpx;
	background-color: #aaa;
}
.order-item-middle {
	display: flex;
	flex-direction: column;
	width: 40%;
}
.order-item-name {
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.order-item-num {
	color: gray;
	font-size: 30rpx;
}
.order-item-price {
	width: 30%;
	text-align: right;
}

.delivery-cost {
	display: flex;
	width: 90%;
	margin-bottom: 10rpx;
	padding: 15rpx;
	justify-content: space-between;
}

/*----------------*/
.pay-wrapper {
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	height: 120rpx;
	line-height: 120rpx;
	text-align: center;
	font-size: 40rpx;
	color: white;
	background-color: orangered;
}